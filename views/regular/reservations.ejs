    function showModal(x) {
      console.log("DATA",x)
      dataKeys = Object.keys(x);
      var keyElmnt;
      var hiddenElmnt;
      var order = ["date","machine","start","end","status","username","justification"]
      var orderNumber;
      $("#view-reservation-modal .modal-body form").empty()
      dataKeys.forEach(key => {
        // console.log("INDEX of " + key,)
        orderNumber = order.indexOf(key)
        if (!(ignoreFields.includes(key))) {
          keyElmnt = "<div class='res-key' data-content='"+ key +"' style='order:" + orderNumber + "'>"
          keyElmnt += "<span class='key'>"
          keyElmnt += firstCap(key) + ": </span>"
          keyElmnt += "<span class='value' data-content='" + x[key] + "'>" + x[key] + "</span>"
          keyElmnt += "</div>"
          $("#view-reservation-modal .modal-body form").append(keyElmnt)
        }
        hiddenElmnt="<input type='hidden' name='" + key + "' value='" + x[key] + "'>"
        $("#view-reservation-modal .modal-body form").append(hiddenElmnt)
      })
      console.log("STATUS",x.status)
      console.log("STATUS_BOOL",(x.status == "Rejected"))
      if (x.status == "Rejected" || x.status == "Canceled") {
        if (x.status == "Rejected") {
          $(".action-reason-card").css("display","block")
          $(".action-reason-card .card-text").html(x.actionReason)
          $(".action-reason-card .status-label").html(x.status)
        } else {
          $(".action-reason-card").css("display","none")
        }
        $("#view-reservation-modal .modal-button-ajax-action").css("display","none")
      } else if (x.status == "Approved") {
        $("#view-reservation-modal .approve-button").css("display","none")
        $("#view-reservation-modal .modify-button").css("display","none")
        $("#view-reservation-modal [data-action='cancel']").css("display","block")
      } else {
        $(".action-reason-card").css("display","none")
        $("#view-reservation-modal [data-action='approve']").css("display","block")
        $("#view-reservation-modal [data-action='cancel']").css("display","block")
        $("#view-reservation-modal [data-action='modify']").css("display","block")
      }
      $("#view-reservation-modal .modal-header").attr("data-status",x.status)
      $("#view-reservation-modal").modal("toggle")
    }

